<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timeline_backgroundscreen"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/timeline_backgroundscreen">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/dayview_nextnodesegment"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical"
                            android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/timelineview_day_circle"
                        android:orientation="vertical" />


                        <LinearLayout
                            android:id="@+id/ll_tday_startSegment"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/ll_tday_segment1OnFoot"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/timeline_activity_walkingcube">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/timeline_walking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tday_segment2OnFoot"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />


                        <LinearLayout
                            android:id="@+id/ll_tday_segment1Walking"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/ll_tday_segment2Walking"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/timeline_activity_walkingcube">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/timeline_walking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tday_segment3Walking"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />


                        <LinearLayout
                            android:id="@+id/ll_tday_segment1OnBicycle"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/ll_tday_segment2OnBicycle"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/timeline_activity_walkingcube">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/timeline_walking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tday_segment3OnBicycle"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/ll_tday_segment1Running"
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/ll_tday_segment2Running"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/timeline_activity_walkingcube">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/timeline_walking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/timeline_activitybackground"
                            android:orientation="vertical" />




                    </LinearLayout>

                </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tday_dayofweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Wednesday"
                    android:textColor="@color/timeline_activitybackground"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_tday_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="12.02.2018"
                    android:textColor="@color/timeline_activitybackground"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/timelineday_border"
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_tday_boxonfoot"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:background="@color/timeline_box"></LinearLayout>

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:background="@color/timeline_box">

                <TextView
                    android:id="@+id/tv_tday_infoOnfoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="20sp"
                    android:text="Type: On Foot"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tday_boxwalking"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="10sp"
                android:layout_height="5sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:background="@color/timeline_box"></LinearLayout>

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:background="@color/timeline_box">

                <TextView
                    android:id="@+id/tv_tday_infoWalking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="20sp"
                    android:text="Type: Walking"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tday_boxbicycle"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="10sp"
                android:layout_height="5sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:background="@color/timeline_box"></LinearLayout>

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:background="@color/timeline_box">

                <TextView
                    android:id="@+id/tv_tday_infoBicycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="20sp"
                    android:text="Type: On Bicycle"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tday_boxRunning"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="10sp"
                android:layout_height="5sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:background="@color/timeline_box"></LinearLayout>

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20sp"
                android:background="@color/timeline_box">

                <TextView
                    android:id="@+id/tv_tday_infoRunning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="20sp"
                    android:text="Type: Running"/>

            </LinearLayout>

        </LinearLayout>

            </LinearLayout>

                <ImageView
                    android:id="@+id/iv_arrow_forward"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_forward"></ImageView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
