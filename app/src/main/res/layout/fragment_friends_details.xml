<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradientbackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Photo -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend_detail_profile_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/profile_pic"
                android:layout_gravity="center_horizontal"/>

            <!-- Username -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/friend_detail_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="Username"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_person"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>


            <!-- Forename -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_tv_forename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/friend_detail_et_forename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="Forename"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_person"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Lastname -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_tv_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/friend_detail_et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="Last name"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_person"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>


            <!-- E-Mail -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_ti_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top">

                <EditText
                    android:id="@+id/friend_detail_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="E-Mail"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_email"
                    android:textColor="#FFFFFF"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3" />
            </android.support.design.widget.TextInputLayout>

            <!-- Age -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/friend_detail_et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="Age"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_face_black_24dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>


            <!-- City -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/friend_detail_tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/child_margin_top"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/friend_detail_et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"
                    android:ems="10"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="City"
                    android:textColorHint="#fff"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_exit"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:imeOptions="actionNext" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <!-- Button Show Statistics -->
                <Button
                    android:id="@+id/friend_detail_btn_statistics"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/background_login"
                    android:clickable="true"
                    android:padding="16dp"
                    android:text="Show Statistics"
                    android:textAllCaps="false"
                    android:textColor="#000000" />

                <!-- Button Show Timeline Changes-->
                <Button
                    android:id="@+id/friend_detail_btn_show_timeline"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/background_login"
                    android:clickable="true"
                    android:padding="16dp"
                    android:text="Show Timeline"
                    android:textAllCaps="false"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Button Remove User -->
            <Button
                android:id="@+id/friend_detail_btn_remove_user"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_signup"
                android:clickable="true"
                android:padding="16dp"
                android:text="Remove User"
                android:textAllCaps="false"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

