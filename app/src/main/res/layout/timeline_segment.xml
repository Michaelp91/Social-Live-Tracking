<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_below="@id/startcircle"
            android:layout_width="3dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="13dp"
            android:background="#000000"    >
        </LinearLayout>



        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="21sp"
            android:layout_toRightOf="@id/ll_line"
            android:id="@+id/iv_activity"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_activeTime"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 min"/>

        <TextView
            android:layout_below="@id/tv_activeTime"
            android:layout_marginRight="15dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_activedistance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 min"/>

        <LinearLayout
            android:id="@+id/ll_pictures"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ll_line"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tv_activedistance"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_pic1"
                android:src="@drawable/landscape1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_pic2"
                android:src="@drawable/landscape1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_pic3"
                android:src="@drawable/landscape1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_noPicAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="No Pictures available"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_toRightOf="@id/ll_line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ll_pictures"
            android:id="@+id/tv_usercomments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:text="No Comments available" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_horizontalline"
            android:visibility="gone"
            android:layout_toRightOf="@id/ll_line"
            android:layout_below="@id/tv_usercomments"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFFFFF"></LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ll_line"
            android:layout_below="@id/ll_horizontalline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_addDetails"
                android:layout_width="50dp"
                android:layout_height="20dp"
                />

            <ImageView
                android:id="@+id/iv_addComments"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                />

            <ImageView
                android:id="@+id/iv_addPicture"
                android:layout_marginLeft="25dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                />


            <ImageView
                android:id="@+id/iv_addActivity"
                android:layout_marginLeft="25dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>