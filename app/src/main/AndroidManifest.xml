<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slt">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Social_Live_Theme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/Social_Live_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="Admin"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/Social_Live_Theme" />
        <activity android:name=".statistics.GeneralViewOfStatistics"></activity>
        <activity android:name=".statistics.ViewStatistics"></activity>
        <activity
            android:name=".MainProfile"
            android:label="@string/title_activity_main_profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Social_Live_Theme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.slt.MainActivity" />
        </activity>
    </application>

</manifest>